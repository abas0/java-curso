package semPOO;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		float ladoA;
		float ladoB;
		float ladoC;
		do {
			ladoA = sc.nextFloat();
			ladoB = sc.nextFloat();
			ladoC = sc.nextFloat();
			if(trianguloValido(ladoA, ladoB, ladoC)) {
				System.out.println("Triângulo válido");
			}
			else {
				System.out.println("Triângulo inválido. Tente novamente");
			}
		}while(!trianguloValido(ladoA, ladoB, ladoC));
		
		sc.close();	
	} 
	
	public static boolean trianguloValido (float a, float b, float c) {
		if(a + b > c && a + c > b && b + c > a) {
			return true;
		}
		return false;
	}
	

}
